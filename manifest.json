{
	"manifest_version": 3,
	"name": "HS Helper",
	"version": "0.1.2",
	"description": "Modifies Help Scout themes",
	"content_scripts": [
		{
			"js": [
				"main.js"
			],
			"matches": [
				"https://secure.helpscout.net/*"
			]
		}
	],
	"action": {
		"default_title": "Drink Water Event",
		"default_popup": "popup.html"
	},
	"permissions": [
		"tabs",
		"nativeMessaging",
		"storage"
	],
	"web_accessible_resources": [
		{
			"resources": [
				"themes/*.css"
			],
			"matches": [
				"<all_urls>"
			]
		}
	]
}